<div class="nav-msg">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
    <% if current_user && !new_broadcasts.blank? %>
      <b class="badge badge-white count-n"><%= new_broadcasts.size %></b>
    <% end %>
  </a>
  <section class="dropdown-menu m-l-sm pull-left animated fadeInRight">
    <div class="arrow left"></div>
    <section class="panel bg-white">
      <header class="panel-heading">
        <% if current_user && !new_broadcasts.blank? %>
        <strong>You have
          <span class="count-n">
            <%= new_broadcasts.size %>
          </span> notifications
        </strong>
      </header>
      <div class="list-group">
        <% new_broadcasts.each do |broadcast| %>
        <a href="#" class="media list-group-item">
          <span class="pull-left thumb-sm">
            <img src="images/avatar.jpg" alt="John said" class="img-circle">
          </span>
          <span class="media-body block m-b-none">
            New Broadcast from Admin <%= User.find(broadcast.admin_id).name %><br>
            <%= broadcast.message_read(current_user.id) %><br>
            <small class="text-muted"><%= "Announced on #{broadcast.created_at.to_formatted_s(:long_ordinal)}" %></small>
          </span>
        </a>
        <% end %>
      </div>
      <% end %>
      <footer class="panel-footer text-sm">
        <a href="#" class="pull-right"><i class="icon-cog"></i></a>
        <a href="#">See all notifications</a>
      </footer>
    </section>
  </section>
</div>


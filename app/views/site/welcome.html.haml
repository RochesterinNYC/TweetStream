.row.span12
  %h4#welcome Welcome to the Twitter Approval Matrix
  %p Please login or create an account by authenticating with Twitter below
  %form.container.text-center{ action: sessions_path, method: "post", style: "margin-top: 20px;"}
    %h3
      Login:
    %input{:type=>"hidden", :name=>"authenticity_token", :value=>form_authenticity_token.to_s}
    %label
      Email Address
    %input#session_email{ type: "text", name: "session[email]"}
    %br
    %label
      Password
    %input#session_password{ type: "password", name: "session[password]"}
      .actions
        %br
        %input{ name: "commit", type: "submit", value: "Log in", class: "btn btn-primary"}
        = link_to "Forgot Password", forgot_password_path, :method => :get, class: "btn btn-primary", style: "color:white;"
        %br
  %p.center
    %a{ title: "Link to sign up or create account", href: "/auth/twitter", id: "login"}
      %img{src: "https://dev.twitter.com/sites/default/files/images_documentation/sign-in-with-twitter-gray.png", alt: "Log in or sign up with Twitter", title: "Sign in with Twitter"}